<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="800.0" prefWidth="1250.0" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pacman.controller.GameController">
  <stylesheets>
    <URL value="@../css/game.css" />
  </stylesheets>
  <center>
    <Pane id="map" prefHeight="550.0" prefWidth="1250.0" BorderPane.alignment="CENTER" />
  </center>
  <top>
    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="1250.0" styleClass="top" BorderPane.alignment="CENTER">
      <children>
        <Pane prefWidth="200.0" />
        <FlowPane alignment="CENTER_RIGHT" columnHalignment="CENTER" HBox.hgrow="ALWAYS">
          <children>
            <Text id="title" fx:id="title" fill="#ffe34a" text="This is a Level Title" textAlignment="CENTER" />
          </children>
        </FlowPane>
        <Pane prefWidth="100.0" />
      </children>
    </HBox>
  </top>
  <bottom>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1250.0" BorderPane.alignment="CENTER">
      <children>
        <Pane prefWidth="200.0" />
        <FlowPane alignment="CENTER" columnHalignment="CENTER" HBox.hgrow="ALWAYS">
        </FlowPane>
        <Pane prefWidth="200.0" />
      </children>
    </HBox>
  </bottom>
</BorderPane>
